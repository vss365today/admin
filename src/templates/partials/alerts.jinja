<section class="area-alerts">
  {% with messages = get_flashed_messages(with_categories=true) %}
  {% if messages %}
  {% for category, message in messages %}
  <div class="msg-alert {{ category }}" role="alert"> {# error info #}
    <p>{{ message }}</p>

    <img class="btn-close" width="25" height="25" alt="" src="{{ url_for('static', filename='img/close.svg') }}">
  </div>
  {% endfor %}
  {% endif %}
  {% endwith %}
</section>
